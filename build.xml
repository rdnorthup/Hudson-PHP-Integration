<?xml version="1.0"?>

<project name="Test Job" default="build">

	<target name="build">
		<delete dir="build/logs"/>
		<delete dir="build/doc"/>
	</target>
	
	<target name="clean"></target>
	
	<target name="prepare">
		<mkdir dir="build/logs"/>
		<mkdir dir="build/doc"/>
	</target>
	
	<target name="phpdoc"></target>
	
	<target name="phpcpd"></target>
	
	<target name="pdepend">
		<exec dir="." executable="pdepend" failonerror="true">
		   <arg line="--jdepend-xml=build/logs/jdepend.xml ."/>
  		</exec>
	</target>
	
	<target name="phpunit"></target>
	
	<target name="code-coverage"></target>
	
</project>

